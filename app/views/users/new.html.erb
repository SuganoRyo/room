<h1>新規登録</h1>

<%= render "shared/error", obj: @user %>

<%= form_with model: @user, url: user_path, local: true do |f| %>
<div class ="filed">
  <%= f.label :名前 %><br>
  <%= f.text_field :nickname %>
</div>

<div class ="filed">
  <%= f.label :メールアドレス %><br>
  <%= f.text_field :email %>
</div>

<div class ="filed">
  <%= f.label :パスワード %><br>
  <%= f.password_field :password %>
</div>

<div class ="filed">
  <%= f.label :パスワード再入力 %><br>
  <%= f.password_field :password_confirmation %>
</div>

<div>
  <%= f.submit "登録" %>
</div>
<%= link_to "ログイン", login_path %>
<% end %>