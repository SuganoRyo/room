<h1>ユーザー編集</h1>

<%= form_with model: @user, url: user_path, local: true do |f| %>
<div class ="filed">
  <%= f.label :名前 %><br>
  <%= f.text_field :nickname %>
</div>

<div class ="filed">
  <%= f.label :アイコン %><br>
  <%= f.file_field :image %>
</div>

<div class ="filed">
  <%= f.label :自己紹介 %><br>
  <%= f.text_field :introduction %>
</div>

<div class ="filed">
  <%= f.label :メールアドレス %><br>
  <%= f.text_field :email %>
</div>

<div class ="filed">
  <%= f.label :パスワード %><br>
  <%= f.password_field :password %>
</div>

<div class ="filed">
  <%= f.label :パスワード再入力 %><br>
  <%= f.password_field :password_confirmation %>
</div>

<div>
  <%= f.submit "編集完了" %>
</div>
<% end %>